generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String   @unique
  outfits   Outfit[]
}

model Estilo {
  id        Int      @id @default(autoincrement())
  nombre    String
  outfits   Outfit[]
}

model Outfit {
  id          Int      @id @default(autoincrement())
  nombre      String
  descripcion String?
  imagenUrl   String?
  usuarioId   Int
  estiloId    Int

  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  estilo      Estilo   @relation(fields: [estiloId], references: [id])
  prendas     Prenda[]
}

model Prenda {
  id        Int     @id @default(autoincrement())
  nombre    String
  tipo      String?
  color     String?
  imagenUrl String?

  outfitId  Int
  outfit    Outfit  @relation(fields: [outfitId], references: [id])
}
