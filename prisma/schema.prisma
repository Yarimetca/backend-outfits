generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String?
  gender   String?

  outfits  Outfit[]
  items    Item[]
}

model Category {
  id       Int      @id @default(autoincrement())
  name     String
  outfits  Outfit[]
  items    Item[]
}

model Outfit {
  id        Int       @id @default(autoincrement())
  name      String
  description String?
  imageUrl  String?

  userId    Int
  categoryId Int

  user      User      @relation(fields: [userId], references: [id])
  category  Category  @relation(fields: [categoryId], references: [id])

  items     Item[]    @relation("OutfitItem")
}

model Item {
  id        Int      @id @default(autoincrement())
  name      String
  color     String?
  imageUrl  String?

  userId    Int?
  categoryId Int?

  user      User?     @relation(fields: [userId], references: [id])
  category  Category? @relation(fields: [categoryId], references: [id])

  outfits   Outfit[] @relation("OutfitItem")
}
