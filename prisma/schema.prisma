generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  clothes Clothes[]
  outfits Outfit[]
}

model Category {
  id   Int    @id @default(autoincrement())
  name String

  clothes Clothes[]
}

model Clothes {
  id    Int     @id @default(autoincrement())
  name  String
  image String?

  color  String
  style  String
  season String

  categoryId Int
  userId     Int

  category Category @relation(fields: [categoryId], references: [id])
  user     User     @relation(fields: [userId], references: [id])

  outfits OutfitClothes[]
}

model Outfit {
  id     Int    @id @default(autoincrement())
  name   String
  userId Int

  user    User            @relation(fields: [userId], references: [id])
  clothes OutfitClothes[]
}

model OutfitClothes {
  outfitId  Int
  clothesId Int

  outfit  Outfit  @relation(fields: [outfitId], references: [id])
  clothes Clothes @relation(fields: [clothesId], references: [id])

  @@id([outfitId, clothesId])
}
