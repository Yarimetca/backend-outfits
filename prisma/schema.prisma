generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("DATABASE_URL")
}


model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String?
  clothes  Clothes[]
  outfits  Outfit[]
}

model Category {
  id      Int      @id @default(autoincrement())
  name    String
  clothes Clothes[]
}

model Clothes {
  id         Int       @id @default(autoincrement())
  name       String
  image      String?
  category   Category  @relation(fields: [categoryId], references: [id])
  categoryId Int
  user       User      @relation(fields: [userId], references: [id])
   category Category @relation(fields: [categoryId], references: [id])
  userId     Int
  outfits    Outfit[]  
}

model Outfit {
  id      Int       @id @default(autoincrement())
  name    String
  user    User      @relation(fields: [userId], references: [id])
  userId  Int
  clothes Clothes[] 
}

