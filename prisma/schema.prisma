datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id      Int      @id @default(autoincrement())
  name    String
  clothes Clothes[]
  outfits Outfit[]
}

model Clothes {
  id          Int      @id @default(autoincrement())
  name        String
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  Int
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])
  outfits     Outfit[]
}

model Outfit {
  id         Int      @id @default(autoincrement())
  name       String
  userId     Int?
  user       User?     @relation(fields: [userId], references: [id])
  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id])
  clothes    Clothes[]
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  outfits Outfit[]
  clothes Clothes[]
}
